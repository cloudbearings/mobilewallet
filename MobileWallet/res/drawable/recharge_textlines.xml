<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android" >

    <item>
        <shape android:shape="rectangle" >
            <stroke
                android:width="1dp"
                android:color="@color/recharge_view_color" />

            <corners android:radius="3dp" />

            <solid android:color="@color/recharge_view_color" />
        </shape>
    </item>
    <item
        android:bottom="1dp"
        android:top="1dp">
        <shape android:shape="rectangle" >
            <stroke
                android:width="1dp"
                android:color="@color/recharge_view_color" />

            <corners android:radius="3dp" />

            <solid android:color="@color/recharge_view_color" />
        </shape>
    </item>

</layer-list>