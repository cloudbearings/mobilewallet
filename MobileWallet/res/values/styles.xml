<resources xmlns:android="http://schemas.android.com/apk/res/android">

    <!--
        Base application theme, dependent on API level. This theme is replaced
        by AppBaseTheme from res/values-vXX/styles.xml on newer devices.
    -->
    <style name="AppBaseTheme" parent="Theme.AppCompat.Light">
        <!--
            Theme customizations available in newer API levels can go in
            res/values-vXX/styles.xml, while customizations related to
            backward-compatibility can go here.
        -->
    </style>

    <!-- Application theme. -->
    <style name="AppTheme" parent="AppBaseTheme">
        <!-- All customizations that are NOT specific to a particular API-level can go here. -->
    </style>

    <!-- custom_actionbar.xml -->
    <style name="actionbar_text_style">
        <item name="android:textSize">@dimen/custom_actionbar_text_size</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <!-- main_activity.xml -->
    <style name="main_heading_style">
        <item name="android:textSize">@dimen/main_heading_text_size</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="main_button_style">
        <item name="android:textSize">@dimen/main_button_text_size</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:background">@drawable/blue_button</item>
    </style>

    <!-- register_activity.xml -->
    <style name="register_edittext_text_style">
        <item name="android:textSize">@dimen/register_edittext_text_size</item>
        <item name="android:textColorHint">@color/bringal_color</item>
        <item name="android:background">@drawable/bringal_border_textlines</item>
        <item name="android:padding">@dimen/register_edittext_padding</item>
    </style>

    <style name="register_button_style">
        <item name="android:textSize">@dimen/register_button_text_size</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:background">@drawable/blue_button</item>
    </style>

    <style name="already_have_an_account_button_style">
        <item name="android:textSize">@dimen/register_button_text_size</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:background">@drawable/bringal_color_button</item>
    </style>

    <style name="signup_with_fb_button_style">
        <item name="android:textSize">@dimen/register_button_text_size</item>
        <item name="android:textColor">@color/bringal_color</item>
        <item name="android:background">@drawable/bringal_border_button</item>
    </style>

    <!-- balance_activity XML styles -->
    <style name="balance_text_style">
        <item name="android:textStyle">normal</item>
        <item name="android:textSize">@dimen/balance_textview_size</item>
        <item name="android:textColor">@color/bringal_color</item>
    </style>

    <style name="balance_amt_style">
        <item name="android:textStyle">normal</item>
        <item name="android:textSize">@dimen/balance_textview_size</item>
        <item name="android:textColor">@color/bringal_color</item>
    </style>

    <style name="recharge_button_style">
        <item name="android:textSize">@dimen/balance_redeem_button_text_size</item>
        <item name="android:background">@drawable/bringal_color_button</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <!-- forgot_password XML styles -->

    <style name="forgot_pwd_heading_style">
        <item name="android:background">@drawable/ash_bg_textlines</item>
        <item name="android:padding">@dimen/forgot_pwd_heading_padding</item>
        <item name="android:textColor">@color/bringal_color</item>
    </style>

    <style name="forgot_pwd_text_style">
        <item name="android:textSize">@dimen/forgot_password_text_size</item>
        <item name="android:textColor">@color/forgot_pwd_text_color</item>
    </style>

    <style name="forgot_pwd_edittext_text_style">
        <item name="android:textSize">@dimen/forgot_pwd_edittext_textsize</item>
        <item name="android:textColorHint">@color/bringal_color</item>
        <item name="android:background">@drawable/forgot_pwd_edittext_textlines</item>
        <item name="android:padding">@dimen/forgot_pwd_edittext_padding</item>
    </style>

    <!-- daily_credits.xml styles -->
    <style name="daily_credits_heading_style">
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">@dimen/daily_credits_heading_textsize</item>
        <item name="android:textColor">@color/bringal_color</item>
    </style>

    <style name="daily_credits_des_style">
        <item name="android:textStyle">normal</item>
        <item name="android:textSize">@dimen/daily_credits_des_textsize</item>
        <item name="android:textColor">@color/daily_credits_des_color</item>
    </style>

    <style name="daily_credits_button_style">
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">@dimen/daily_credits_button_textsize</item>
        <item name="android:textStyle">bold</item>
        <item name="android:background">@drawable/bringal_color_button</item>
    </style>

    <!-- daily_credits_success.xml -->
    <style name="daily_credits_success_button_style">
        <item name="android:textColor">@color/white</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">@dimen/daily_credits_button_textsize</item>
        <item name="android:background">@drawable/bringal_color_button</item>
    </style>

</resources>