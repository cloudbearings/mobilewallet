<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/actionbar_bg"
    android:orientation="vertical" >

    <ImageView
        android:id="@+id/actionbar_title"
        style="@style/actionbar_text_style"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"
        android:src="@drawable/mobile_wallet_icon" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="@dimen/actionbar_linearlayout_height"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true"
        android:layout_marginRight="@dimen/actionbar_linearlayout_margin_right"
        android:layout_marginTop="@dimen/actionbar_linearlayout_margin_top"
        android:background="@drawable/recharge_textlines"
        android:onClick="viewBalance"
        android:orientation="horizontal" >

        <ImageView
            android:id="@+id/amtImage"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/actionbar_amt_image_margin_bottom"
            android:paddingBottom="@dimen/actionbar_amt_image_padding_bottom"
            android:paddingLeft="@dimen/actionbar_amt_image_padding_left"
            android:paddingRight="@dimen/actionbar_amt_image_padding_right"
            android:paddingTop="@dimen/actionbar_amt_image_padding_top"
            android:src="@drawable/rupee_icon_white" />

        <TextView
            android:id="@+id/amount"
            style="@style/actionbar_amt_style"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="@dimen/actionbar_amt_margin_right"
            android:layout_marginTop="@dimen/actionbar_amt_margin_top"
            android:text="0" />
    </LinearLayout>

</RelativeLayout>