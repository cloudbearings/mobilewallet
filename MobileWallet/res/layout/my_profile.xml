<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:fillViewport="true"
    android:orientation="vertical"
    android:scrollbars="none" >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:gravity="top"
        android:orientation="vertical"
        android:padding="@dimen/my_profile_layout_padding"
        tools:context="com.freeplus.UserProfileActivity" >

        <TextView
            android:id="@+id/mobileNumber"
            style="@style/my_profile_textview_style"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/textView11"
            android:layout_marginTop="@dimen/my_profile_textview_margin_top"
            android:text="@string/mobile_number" />

        <TextView
            android:id="@+id/dateOfBirth"
            style="@style/my_profile_textview_style"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/mobileNumber"
            android:layout_marginTop="@dimen/my_profile_textview_margin_top"
            android:text="@string/date_of_birth" />

        <TextView
            android:id="@+id/textView3"
            style="@style/my_profile_textview_style"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/dateOfBirth"
            android:layout_marginTop="@dimen/my_profile_textview_margin_top"
            android:text="@string/gender" />

        <TextView
            android:id="@+id/textView4"
            style="@style/my_profile_textview_style"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/textView3"
            android:layout_marginTop="@dimen/my_profile_textview_margin_top"
            android:text="@string/ocupation" />

        <TextView
            android:id="@+id/textView5"
            style="@style/my_profile_textview_style"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/textView4"
            android:layout_marginTop="@dimen/my_profile_textview_margin_top"
            android:text="@string/income" />

        <TextView
            android:id="@+id/textView6"
            style="@style/my_profile_textview_style"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@+id/mobileNumber"
            android:layout_alignBottom="@+id/mobileNumber"
            android:layout_centerHorizontal="true"
            android:text="@string/colon" />

        <TextView
            android:id="@+id/textView7"
            style="@style/my_profile_textview_style"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@+id/dateOfBirth"
            android:layout_alignBottom="@+id/dateOfBirth"
            android:layout_alignLeft="@+id/textView6"
            android:text="@string/colon" />

        <TextView
            android:id="@+id/textView8"
            style="@style/my_profile_textview_style"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@+id/textView3"
            android:layout_alignBottom="@+id/textView3"
            android:layout_alignRight="@+id/textView7"
            android:text="@string/colon" />

        <TextView
            android:id="@+id/textView9"
            style="@style/my_profile_textview_style"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@+id/textView4"
            android:layout_alignBottom="@+id/textView4"
            android:layout_alignRight="@+id/textView8"
            android:text="@string/colon" />

        <TextView
            android:id="@+id/textView10"
            style="@style/my_profile_textview_style"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/textView5"
            android:layout_alignLeft="@+id/textView9"
            android:text="@string/colon" />

        <TextView
            android:id="@+id/mobile_number"
            style="@style/my_profile_textview_style"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@+id/textView6"
            android:layout_alignBottom="@+id/textView6"
            android:layout_marginLeft="@dimen/my_profile_mobile_margin_left"
            android:layout_toRightOf="@+id/textView6" />

        <TextView
            android:id="@+id/date_of_birth"
            style="@style/my_profile_textview_style"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/textView7"
            android:layout_alignLeft="@+id/mobile_number" />

        <TextView
            android:id="@+id/gender"
            style="@style/my_profile_textview_style"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@+id/textView8"
            android:layout_alignBottom="@+id/textView8"
            android:layout_alignLeft="@+id/mobile_number" />

        <TextView
            android:id="@+id/ocupation"
            style="@style/my_profile_textview_style"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_above="@+id/textView5"
            android:layout_alignLeft="@+id/mobile_number" />

        <TextView
            android:id="@+id/income"
            style="@style/my_profile_textview_style"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@+id/textView10"
            android:layout_alignBottom="@+id/textView10"
            android:layout_alignLeft="@+id/mobile_number" />

        <Button
            android:id="@+id/edit_profile"
            style="@style/my_profile_button_style"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/textView10"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="@dimen/my_profile_button_margin_top"
            android:text="@string/edit_profile" />

        <TextView
            android:id="@+id/name"
            style="@style/my_profile_textview_style"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/name" />

        <TextView
            android:id="@+id/user_name"
            style="@style/my_profile_textview_style"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@+id/textView17"
            android:layout_alignBottom="@+id/textView17"
            android:layout_alignLeft="@+id/mobile_number" />

        <TextView
            android:id="@+id/textView11"
            style="@style/my_profile_textview_style"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/name"
            android:layout_marginTop="@dimen/my_profile_textview_margin_top"
            android:text="@string/email" />

        <TextView
            android:id="@+id/email_address"
            style="@style/my_profile_textview_style"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@+id/textView12"
            android:layout_alignBottom="@+id/textView12"
            android:layout_alignLeft="@+id/mobile_number" />

        <TextView
            android:id="@+id/textView17"
            style="@style/my_profile_textview_style"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_above="@+id/textView11"
            android:layout_alignLeft="@+id/textView12"
            android:text="@string/colon" />

        <TextView
            android:id="@+id/textView12"
            style="@style/my_profile_textview_style"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_above="@+id/mobileNumber"
            android:layout_centerHorizontal="true"
            android:text="@string/colon" />
    </RelativeLayout>

</ScrollView>