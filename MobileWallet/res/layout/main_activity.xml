<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@color/white"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin" >

    <ImageView
        android:id="@+id/mobile_wallet_heading"
        style="@style/main_heading_style"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/register"
        android:layout_alignRight="@+id/register"
        android:layout_below="@+id/mobile_wallet_icon"
        android:src="@drawable/mobile_wallet_logo" />

    <ImageView
        android:id="@+id/mobile_wallet_icon"
        android:layout_width="fill_parent"
        android:layout_height="@dimen/main_activity_mobile_wallet_icon_imageview_height"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:paddingRight="@dimen/main_activity_mobile_wallet_icon_imageview_paddingRight"
        android:src="@drawable/mobile_wallet" />

    <Button
        android:id="@+id/register"
        style="@style/main_button_style"
        android:layout_width="@dimen/main_activity_register_button_width"
        android:layout_height="wrap_content"
        android:layout_below="@+id/mobile_wallet_heading"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="@dimen/main_activity_register_button_margintop"
        android:text="@string/register_button_name" />

    <Button
        android:id="@+id/login"
        style="@style/main_button_style"
        android:layout_width="@dimen/main_activity_login_button_name_button_width"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/register"
        android:layout_below="@+id/register"
        android:layout_marginTop="@dimen/main_activity_login_button_name_button_margintop"
        android:text="@string/login_button_name" />

</RelativeLayout>