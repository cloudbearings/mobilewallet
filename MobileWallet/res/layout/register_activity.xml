<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:facebook="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin" >

    <EditText
        android:id="@+id/mobile_number"
        style="@style/register_edittext_text_style"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_marginTop="@dimen/register_activity_mobile_number_edittext_margintop"
        android:ems="10"
        android:hint="@string/mobile_edittext_hint"
        android:inputType="number" >

        <requestFocus />
    </EditText>

    <EditText
        android:id="@+id/email"
        style="@style/register_edittext_text_style"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/mobile_number"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="@dimen/register_activity_email_edittext_margintop"
        android:ems="10"
        android:hint="@string/email_edittext_hint"
        android:inputType="textEmailAddress" >
    </EditText>

    <EditText
        android:id="@+id/pwd"
        style="@style/register_edittext_text_style"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/email"
        android:layout_below="@+id/fullname"
        android:layout_marginTop="@dimen/register_activity_pwd_edittext_margintop"
        android:ems="10"
        android:hint="@string/pwd_edittext_hint"
        android:inputType="textPassword" />

    <EditText
        android:id="@+id/fullname"
        style="@style/register_edittext_text_style"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/email"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="@dimen/register_activity_fullname_edittext_margintop"
        android:ems="10"
        android:hint="@string/fullname_edittext_hint" />

    <Button
        android:id="@+id/register"
        style="@style/register_button_style"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/pwd"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="@dimen/register_activity_register_button_margintop"
        android:text="@string/create_account_button_name" />

    <TextView
        android:id="@+id/textView1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/register"
        android:layout_below="@+id/sign_up"
        android:layout_marginTop="@dimen/register_activity_registration_des_textview_margintop"
        android:text="@string/registration_des" />

    <com.facebook.widget.LoginButton
        xmlns:fb="http://schemas.android.com/apk/res-auto"
        android:id="@+id/sign_up"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/register"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="5dp"
        android:text="@string/signup_with_fb_button_name"
        facebook:confirm_logout="false"
        facebook:fetch_user_info="true"
        fb:login_text="@string/register_with_facebook"
        fb:logout_text="@string/title_processing" />

</RelativeLayout>