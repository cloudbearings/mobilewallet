<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@color/more_fragment_bg_color"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin" >

    <TextView
        android:id="@id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:text="@string/refer_earn"
        android:textSize="@dimen/invite_heading_text_size"
        android:textStyle="bold" />

    <TextView
        android:id="@id/textView1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@id/textView2"
        android:layout_below="@id/textView2"
        android:layout_marginTop="15.0dip"
        android:text="@string/invite_and_earn" />

    <RelativeLayout
        android:id="@id/refer_instructions"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/textView1"
        android:layout_marginTop="15.0dip"
        android:background="@drawable/textlines" >

        <TextView
            android:id="@id/textView3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="10.0dip"
            android:text="@string/how_it_works"
            android:textSize="16.0sp" />

        <View
            android:id="@id/view1"
            android:layout_width="fill_parent"
            android:layout_height="1.0dip"
            android:layout_below="@id/textView3"
            android:background="@color/line_color" />

        <TextView
            android:id="@id/textView4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/view1"
            android:lineSpacingExtra="2.0dip"
            android:padding="10.0dip"
            android:text="@string/refer_instructions" />
    </RelativeLayout>

    <LinearLayout
        android:id="@id/linearLayout1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@id/refer_instructions"
        android:layout_alignRight="@id/refer_instructions"
        android:layout_below="@id/refer_instructions"
        android:orientation="horizontal"
        android:padding="10.0dip" >

        <ImageView
            android:id="@id/imageView1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/whats_app_icon" />

        <ImageView
            android:id="@id/imageView2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="7.0dip"
            android:src="@drawable/facebook_icon" />

        <ImageView
            android:id="@id/imageView3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="7.0dip"
            android:src="@drawable/twitter_icon" />

        <ImageView
            android:id="@id/imageView4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="7.0dip"
            android:src="@drawable/share_other_icon" />
    </LinearLayout>

    <TextView
        android:id="@id/textView5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/linearLayout1"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10.0dip"
        android:text="@string/referral_link_des" />

    <TextView
        android:id="@id/textView6"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/textView5"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10.0dip"
        android:background="@color/bringal_color"
        android:gravity="center_horizontal"
        android:padding="10.0dip"
        android:text="@string/referral_link"
        android:textColor="@color/white"
        android:textStyle="bold" />

</RelativeLayout>