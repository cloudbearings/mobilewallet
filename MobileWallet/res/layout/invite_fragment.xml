<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true"
    android:orientation="vertical"
    android:scrollbars="none" >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/more_fragment_bg_color"
        android:paddingBottom="@dimen/activity_vertical_margin"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:paddingTop="@dimen/activity_vertical_margin" >

        <TextView
            android:id="@+id/textView2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:text="@string/refer_earn"
            android:textSize="@dimen/invite_heading_text_size"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/inviteDes"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/textView2"
            android:layout_below="@+id/textView2"
            android:layout_marginTop="@dimen/invite_fragment_inviteDes_textView_margin_top"
            android:text="@string/invite_and_earn" />

        <RelativeLayout
            android:id="@+id/refer_instructions"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/inviteDes"
            android:layout_marginTop="@dimen/invite_fragment_refer_instructions_RelativeLayout_margin_top"
            android:background="@drawable/textlines" >

            <TextView
                android:id="@+id/textView3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="@dimen/invite_fragment_how_it_works_textView_padding"
                android:text="@string/how_it_works"
                android:textSize="@dimen/invite_fragment_how_it_works_textView_textSize" />

            <View
                android:id="@+id/view1"
                android:layout_width="match_parent"
                android:layout_height="@dimen/invite_fragment_inviteDes_View_height"
                android:layout_below="@+id/textView3"
                android:background="@color/line_color" />

            <TextView
                android:id="@+id/textView4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/view1"
                android:lineSpacingExtra="@dimen/invite_fragment_refer_instructions_textView_lineSpacingExtra"
                android:padding="@dimen/invite_fragment_refer_instructions_textView_padding"
                android:text="@string/refer_instructions" />
        </RelativeLayout>

        <LinearLayout
            android:id="@+id/linearLayout1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/refer_instructions"
            android:layout_alignRight="@+id/refer_instructions"
            android:layout_below="@+id/refer_instructions"
            android:orientation="horizontal"
            android:padding="@dimen/invite_fragment_refer_instructions_linearLayout_padding" >

            <ImageView
                android:id="@+id/invite_via_whatsapp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/whats_app_icon" />

            <ImageView
                android:id="@+id/invite_via_facebook"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="@dimen/invite_fragment_invite_via_facebook_imageView_padding"
                android:src="@drawable/facebook_icon" />

            <ImageView
                android:id="@+id/invite_via_twitter"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="@dimen/invite_fragment_invite_via_twitter_imageView_padding"
                android:src="@drawable/twitter_icon" />

            <ImageView
                android:id="@+id/share_via_apps"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="@dimen/invite_fragment_share_via_apps_imageView_padding"
                android:src="@drawable/share_other_icon" />
        </LinearLayout>

        <TextView
            android:id="@+id/textView5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/linearLayout1"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="@dimen/invite_fragment_referral_link_des_textView_margintop"
            android:text="@string/referral_link_des" />

        <TextView
            android:id="@+id/textView6"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/textView5"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="@dimen/invite_fragment_referral_link_textView_margintop"
            android:background="@drawable/referral_link_textlines"
            android:gravity="center_horizontal"
            android:padding="@dimen/invite_fragment_referral_link_textView_padding"
            android:text="@string/referral_link"
            android:textColor="@color/white"
            android:textStyle="bold" />
    </RelativeLayout>

</ScrollView>