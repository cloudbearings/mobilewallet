<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true"
    android:orientation="vertical"
    android:scrollbars="none" >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >

        <android.support.v4.widget.DrawerLayout
            xmlns:android="http://schemas.android.com/apk/res/android"
            android:id="@+id/rcg_drawer_layout"
            android:layout_width="match_parent"
            android:layout_height="match_parent" >

            <RelativeLayout
                xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/more_fragment_bg_color"
                android:orientation="vertical"
                android:padding="20dp" >

                <TextView
                    android:id="@+id/textView1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:text="@string/min_recharge_amt"
                    android:textAppearance="?android:attr/textAppearanceMedium" />

                <RadioGroup
                    android:id="@+id/recharge_type"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/view1"
                    android:layout_marginTop="@dimen/recharge_fragment_recharge_type_radiogroup_margintop"
                    android:gravity="center_horizontal"
                    android:orientation="horizontal" >

                    <RadioButton
                        android:id="@+id/self"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="@dimen/recharge_fragment_self_radiobutton_marginRight"
                        android:checked="true"
                        android:onClick="onRadioButtonClicked"
                        android:text="@string/self" />

                    <RadioButton
                        android:id="@+id/others"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:onClick="onRadioButtonClicked"
                        android:text="@string/others" />
                </RadioGroup>

                <TextView
                    android:id="@+id/textView3"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_below="@+id/recharge_type"
                    android:layout_marginTop="@dimen/recharge_fragment_enter_details_textview_margintop"
                    android:text="@string/enter_details"
                    android:textAppearance="?android:attr/textAppearanceMedium" />

                <EditText
                    android:id="@+id/mobile_number"
                    style="@style/recg_mobile_no_edittext_style"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_below="@+id/textView3"
                    android:layout_marginTop="@dimen/recharge_fragment_mobile_number_edittext_margintop"
                    android:ems="10"
                    android:hint="@string/moile_no_hint"
                    android:inputType="number" >

                    <requestFocus />
                </EditText>

                <EditText
                    android:id="@+id/operator_circle"
                    style="@style/recg_operator_edittext_style"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_below="@+id/mobile_number"
                    android:layout_centerVertical="true"
                    android:layout_marginTop="@dimen/recharge_fragment_operator_circle_edittext_margintop"
                    android:clickable="true"
                    android:drawableRight="@drawable/rightarrow_icon"
                    android:ems="10"
                    android:focusable="false"
                    android:focusableInTouchMode="false"
                    android:hint="@string/operator_circle_hint" />

                <EditText
                    android:id="@+id/recharge_amount"
                    style="@style/recg_edittext_style"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_below="@+id/operator_circle"
                    android:layout_marginTop="@dimen/recharge_fragment_recharge_amount_edittext_margintop"
                    android:ems="10"
                    android:hint="@string/amount"
                    android:inputType="number" />

                <Button
                    android:id="@+id/recharge"
                    style="@style/recg_button_style"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_below="@+id/recharge_amount"
                    android:layout_marginTop="@dimen/recharge_fragment_recharge_button_margintop"
                    android:text="@string/recharge" />

                <View
                    android:id="@+id/view1"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/recharge_fragment_view1_view_height"
                    android:layout_below="@+id/textView1"
                    android:layout_marginTop="@dimen/recharge_fragment_view1_view_margintop"
                    android:background="@drawable/recharge_textlines" />

                <TextView
                    android:id="@+id/textView2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignBottom="@+id/view1"
                    android:layout_alignLeft="@+id/view1"
                    android:layout_marginBottom="@dimen/recharge_fragment_wallet_money_textview_marginbottom"
                    android:layout_marginLeft="@dimen/recharge_fragment_wallet_money_textview_marginleft"
                    android:text="@string/wallet_money"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:textColor="@color/white" />

                <TextView
                    android:id="@+id/wallet_bal"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignBaseline="@+id/textView2"
                    android:layout_alignBottom="@+id/textView2"
                    android:layout_alignRight="@+id/view1"
                    android:layout_marginRight="@dimen/recharge_fragment_wallet_bal_textview_marginright"
                    android:text="10"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:textColor="@color/white" />

                <ImageView
                    android:id="@+id/contacts"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignLeft="@+id/wallet_bal"
                    android:layout_alignRight="@+id/mobile_number"
                    android:layout_alignTop="@+id/mobile_number"
                    android:layout_marginTop="@dimen/recharge_fragment_contacts_imageview_margintop"
                    android:src="@drawable/contacts_icon"
                    android:visibility="gone" />

                <TextView
                    android:id="@+id/textView5"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignBaseline="@+id/mobile_number"
                    android:layout_alignBottom="@+id/mobile_number"
                    android:layout_alignLeft="@+id/textView1"
                    android:text="@string/country_code" />
            </RelativeLayout>

            <ListView
                android:id="@+id/operator_list_view"
                android:layout_width="@dimen/circle_slider_drawer_width"
                android:layout_height="match_parent"
                android:layout_gravity="right"
                android:background="@color/list_background"
                android:choiceMode="singleChoice"
                android:divider="@color/list_divider"
                android:dividerHeight="1dp"
                android:listSelector="@drawable/list_selector"
                android:scrollbars="none" />
        </android.support.v4.widget.DrawerLayout>
    </RelativeLayout>

</ScrollView>