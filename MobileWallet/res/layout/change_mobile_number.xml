<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:gravity="center_vertical"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.mobilewallet.ChangeMobileNumber" >

    <EditText
        android:id="@+id/new_mobile_no"
        style="@style/cmn_edittext_text_style"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/textView1"
        android:layout_alignRight="@+id/textView1"
        android:layout_below="@+id/textView1"
        android:layout_marginTop="@dimen/cmn_edittext_margin_top"
        android:ems="10"
        android:hint="@string/new_mobile_no"
        android:inputType="number" >

        <requestFocus />
    </EditText>

    <Button
        android:id="@+id/change_mobile"
        style="@style/cmn_button_text_style"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/new_mobile_no"
        android:layout_alignRight="@+id/new_mobile_no"
        android:layout_below="@+id/new_mobile_no"
        android:layout_marginTop="@dimen/cmn_button_margin_top"
        android:text="@string/change_mb_button_name" />

    <TextView
        android:id="@+id/textView1"
        style="@style/cmn_heading_text_style"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="@dimen/cmn_heading_margin_bottom"
        android:text="@string/change_mb_heading" />

</RelativeLayout>