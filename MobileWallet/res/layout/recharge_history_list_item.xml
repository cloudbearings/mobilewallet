<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical" >

    <TextView
        android:id="@+id/tDes"
        style="@style/history_listitem_text_style"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_marginBottom="@dimen/history_des_margin_bottom"
        android:layout_marginLeft="@dimen/history_des_margin_left"
        android:layout_marginRight="@dimen/history_des_margin_right"
        android:layout_marginTop="@dimen/history_des_margin_top"
        android:layout_toLeftOf="@+id/imageView1"
        android:ellipsize="end"
        android:maxLines="2"
        android:text="Recharged to 9441659439 (Airtel-Andrapradesh) for Rs.50" />

    <View
        android:id="@+id/view1"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_alignParentLeft="true"
        android:layout_marginTop="@dimen/dbt_history_view1_margin_top"
        android:background="@color/line_color" />

    <TextView
        android:id="@+id/tCoins"
        style="@style/history_listitem_text_style"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_alignTop="@+id/imageView1"
        android:layout_marginRight="@dimen/history_coins_margin_right"
        android:layout_marginTop="@dimen/history_coins_margin_top"
        android:text="100000" />

    <TextView
        android:id="@+id/tDate"
        style="@style/history_tid_text_style"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/tDes"
        android:layout_marginTop="@dimen/history_date_margin_top"
        android:text="24-06-2014" />

    <TextView
        android:id="@+id/tId"
        style="@style/history_date_text_style"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignRight="@+id/tDes"
        android:layout_marginRight="@dimen/history_tid_margin_right"
        android:layout_marginTop="@dimen/history_tid_margin_top"
        android:text="ID:2566435" />

    <ImageView
        android:id="@+id/imageView1"
        android:layout_width="@dimen/history_rupee_image_width"
        android:layout_height="@dimen/history_rupee_image_height"
        android:layout_above="@+id/tId"
        android:layout_marginBottom="@dimen/history_coins_image_margin_bottom"
        android:layout_marginLeft="@dimen/history_coins_image_margin_left"
        android:layout_marginTop="@dimen/history_coins_image_margin_top"
        android:layout_toLeftOf="@+id/tCoins"
        android:paddingTop="@dimen/history_coins_image_padding_top"
        android:src="@drawable/rupee_icon" />

    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/history_vertical_line_height"
        android:layout_alignTop="@+id/tDes"
        android:layout_toLeftOf="@+id/imageView1" />

    <TextView
        android:id="@+id/tStatus"
        style="@style/history_tid_text_style"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/tDate"
        android:layout_below="@+id/imageView2"
        android:text="Status : Success" />

</RelativeLayout>