<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:id="@+id/linearLayout1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="@dimen/lc_rl_margin_top"
        android:orientation="vertical">

        <TextView
            android:id="@+id/textView1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:gravity="center"
            android:text="Amount"
            android:textAppearance="?android:attr/textAppearanceMedium" />

        <View
            android:layout_width="@dimen/lc_rl_view_width"
            android:layout_height="@dimen/lc_rl_view_height"
            android:layout_marginTop="@dimen/lc_text_margin_top"
            android:background="@color/red" />

        <TextView
            android:id="@+id/refPayment"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="@dimen/lc_text_margin_top"
            android:gravity="center"
            android:text="REF : 123456"
            android:textAppearance="?android:attr/textAppearanceSmall" />
    </LinearLayout>

    <EditText
        android:id="@+id/name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/linearLayout1"
        android:layout_alignRight="@+id/linearLayout1"
        android:layout_below="@+id/linearLayout1"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="@dimen/lc_amt_to_be_paid_margin_top"
        android:drawableLeft="@drawable/name_icon"
        android:ems="6"
        android:hint="@string/name_hint"
        android:inputType="text"
        android:singleLine="true"
        android:textAppearance="?android:attr/textAppearanceLarge">

        <requestFocus />
    </EditText>

    <EditText
        android:id="@+id/mobile"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/name"
        android:layout_alignRight="@+id/name"
        android:layout_below="@+id/name"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="@dimen/lc_edittext_margin_top"
        android:drawableLeft="@drawable/mobile_icon"
        android:ems="6"
        android:hint="@string/mobile_hint"
        android:inputType="number"
        android:singleLine="true"
        android:textAppearance="?android:attr/textAppearanceLarge"></EditText>

    <EditText
        android:id="@+id/email"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/mobile"
        android:layout_alignRight="@+id/mobile"
        android:layout_below="@+id/mobile"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="@dimen/lc_edittext_margin_top"
        android:drawableLeft="@drawable/email_icon"
        android:ems="6"
        android:hint="@string/email_hint"
        android:inputType="text"
        android:singleLine="true"
        android:textAppearance="?android:attr/textAppearanceLarge"></EditText>

    <EditText
        android:id="@+id/amountToBePaid"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/email"
        android:layout_alignRight="@+id/email"
        android:layout_below="@+id/email"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="@dimen/lc_edittext_margin_top"
        android:drawableRight="@drawable/ic_action_edit"
        android:ems="6"
        android:gravity="center"
        android:inputType="number"
        android:singleLine="true"
        android:text="600"
        android:textAppearance="?android:attr/textAppearanceLarge"></EditText>

    <Button
        android:id="@+id/payment"
        android:layout_width="@dimen/lc_payment_button_width"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/amountToBePaid"
        android:layout_alignRight="@+id/amountToBePaid"
        android:layout_below="@+id/amountToBePaid"
        android:layout_marginTop="@dimen/lc_payment_button_margin_top"
        android:background="@drawable/fc_rect_border_sign_in"
        android:onClick="sendAmount"
        android:text="Pay"
        android:textColor="@color/white"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/tbResult"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/payment"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="@dimen/lc_tab_result_margin_top"
        android:textAppearance="?android:attr/textAppearanceMedium" />

</RelativeLayout>