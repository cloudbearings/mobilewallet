<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="@dimen/c_fl_width"
    android:layout_height="@dimen/c_fl_height"
    android:background="@color/grey">

    <TextView
        android:id="@+id/dateNumber"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center"
        android:layout_marginBottom="@dimen/c_date_no_margin_bottom"
        android:fontFamily="sans-serif-condensed"
        android:gravity="center"
        android:padding="@dimen/c_date_no_padding"
        android:text="25 "
        android:textColor="@color/date_no_text_color" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/c_ll_height"
        android:layout_gravity="bottom"
        android:layout_margin="@dimen/c_ll_margin"
        android:background="@drawable/textlines"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/dateMonth"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginLeft="@dimen/c_date_month_margin_left"
            android:layout_marginRight="@dimen/c_date_month_margin_right"
            android:gravity="center"
            android:text="May 2015"
            android:textColor="@color/white" />
    </LinearLayout>

</FrameLayout>