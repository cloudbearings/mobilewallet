<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <item>
        <layer-list>
            <item>
                <shape>
                    <gradient android:angle="90" android:endColor="@color/white" android:startColor="@color/white" android:type="linear" />

                    <stroke android:width="1dp" android:color="@color/edittext_border_color" />

                    <corners android:radius="3dp" />

                    <padding android:bottom="4dp" android:left="3dp" android:right="3dp" android:top="4dp" />
                </shape>
            </item>
            <item>
                <bitmap android:gravity="right" android:src="@drawable/down_arrow_icon" />
                // you can use any other image here, instead of down_arrow_icon
            </item>
        </layer-list>
    </item>

</selector>